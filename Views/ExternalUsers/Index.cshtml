@model IEnumerable<Mvc4_Kulti.ExternalUsers>

@{
  ViewBag.Title = "External Users";
}

<link href="../../Images/TableSort/style.css" rel="stylesheet" type="text/css" />
<script src="../../Content/themes/jquery.tablesorter.min.js" type="text/javascript"></script>

<style>
  #sidebar { display: none; }
  #content { width: 90%; }
</style>

<script type="text/javascript">
  $(document).ready(function () {

    $("#SortTable")
      .tablesorter({
        dateFormat: "ddmmyyyy",
        widgets: ['zebra'],
        cssAsc: "headerSortUp",
        cssDesc: "headerSortDown",
        cssHeader: "header",
        
      });

    $('#searchTerm').mouseover(function () {
      $(this).attr("title", $("#ttip").text());
    });

    $(".scroll").mCustomScrollbar({
      theme: "dark-thick"
    });

  });
</script>

<fieldset>
  <legend>@ViewBag.Title</legend>

<p>
  @Html.ActionLink("Erstellen", "Create")
</p>
  <div style="height: 400px; overflow: scroll;">
    <table id="SortTable" class="tablesorter" style="width: 100%;">
      <thead>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td><strong>Name</strong></td>
          <td><strong>Vorname</strong></td>
          <td><strong>Email</strong></td>
          <td><strong>Email2</strong></td>
          <td><strong>Mieter</strong></td>
          <td><strong>Bewohner</strong></td>
          <td><strong>Beiz</strong></td>
          <td><strong>KoKo</strong></td>
          <td><strong>Halle</strong></td>
          <td><strong>Gew.trakt</strong></td>
          <td><strong>Giesserei</strong></td>
          <td><strong>Schür</strong></td>
          <td><strong>Villa</strong></td>
          <td><strong>Wagenstr.</strong></td>
          <td><strong>Veranst.</strong></td>
          <td><strong>Geschäftl.</strong></td>
          <td><strong>Verwaltung</strong></td>
          <td><strong>Stiftung</strong></td>
          <td><strong>P_Träve</strong></td>
          <td><strong>P_Koko</strong></td>
          <td><strong>P_Halle</strong></td>
          <td><strong>P_Beiz</strong></td>
          <td><strong>Ehemalige</strong></td>
          <td><strong>Sonstige</strong></td>
        </tr>
      </thead>
      @foreach (var item in Model) {
        <tr>
          <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID })
          </td>
          <td>
            @Html.ActionLink("Details", "Details", new { id=item.ID })
          </td>
          <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.LastName)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.FirstName)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Email)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Email2)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Mieter)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Bewohner)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Beiz)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.KoKo)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Halle)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Gewerbetrakt)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Giesserei)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Schuer)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Villa)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Wagenstrasse)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Veranstalter)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Geschaeftlich)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Verwaltung)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Stiftung)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Prot_Traeve)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Prot_Koko)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Prot_Halle)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Prot_Beiz)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Ehemalige)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Sonstige)
          </td>

        </tr>
      }
    </table>

  </div>

</fieldset>