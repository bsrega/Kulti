@model IEnumerable<Mvc4_Kulti.Agencies>

@{
    ViewBag.Title = "Veranstalter";
}

<link href="../../Images/TableSort/style.css" rel="stylesheet" type="text/css" />
<script src="../../Content/themes/jquery.tablesorter.min.js" type="text/javascript"></script>

<style>
  #sidebar { display: none; }
  #content { width: 90%; }
</style>

<script type="text/javascript">
  $(document).ready(function () {
    $("#SortTable").tablesorter(
      {
        dateFormat: "ddmmyyyy",
        widgets: ['zebra'],
        cssAsc: "headerSortUp",
        cssDesc: "headerSortDown",
        cssHeader: "header"
      }
    );
  }
  );
</script>

<fieldset>
  <legend>Veranstalter</legend>
  <p>
    @Html.ActionLink("Neuer Veranstalter", "Create")
</p>
  <table id="SortTable" class="tablesorter" style="width: 100%">
    <thead>
      <tr>
        <th>
          @Html.DisplayName("Name")
        </th>
        <th>
          @Html.DisplayName("Email")
        </th>
        <th>
          @Html.DisplayName("Tel")
        </th>
        <th>
          @Html.DisplayName("Strasse")
        </th>
        <th>
          @Html.DisplayName("Zip")
        </th>
        <th>
          @Html.DisplayName("Ort")
        </th>
        <th>
          @Html.DisplayName("Vorname")
        </th>
        <th>
          @Html.DisplayName("Nachname")
        </th>
        <th>
          @Html.DisplayName("Email2")
        </th>
        <th>
          @Html.DisplayName("Tel")
        </th>
      </tr>
    </thead>
    @foreach (var item in Model) {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.AgencyName)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.AgencyEmail)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.AgencyPhone)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.AgencyStreet)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.AgencyZip)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.AgencyCity)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.ContactFirstName)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.ContactLastName)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.ContactEmail)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.ContactPhone)
        </td>
        <td>
          @Html.ActionLink("Edit", "Edit", new { id=item.AgencyId }) |
          @Html.ActionLink("Detail", "Details", new { id=item.AgencyId }) |
          @Html.ActionLink("Löschen", "Delete", new { id=item.AgencyId })
        </td>
      </tr>
    }

  </table>
    
</fieldset>


